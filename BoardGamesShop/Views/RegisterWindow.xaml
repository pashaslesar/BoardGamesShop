<Window x:Class="BoardGamesShop.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrace"
        Height="280"
        Width="380"
        WindowStartupLocation="CenterOwner"
        Background="#FFAD9C72">

    <StackPanel Margin="16">
        <TextBlock Text="Uživatelské jméno" Margin="0,0,0,4"/>
        <TextBox x:Name="UserNameBox"
                 Height="26"
                 Background="#EAE0C8"
                 Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="E-mail (volitelné)" Margin="0,12,0,4"/>
        <TextBox x:Name="EmailBox"
                 Height="26"
                 Background="#EAE0C8"
                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Heslo" Margin="0,12,0,4"/>
        <PasswordBox x:Name="PasswordBox"
                     Height="26"
                     Background="#EAE0C8"
                     PasswordChanged="PasswordBox_PasswordChanged"/>

        <TextBlock x:Name="ErrorText"
                   Foreground="Red"
                   Margin="0,8,0,0"
                   Text="{Binding ErrorMessage}"/>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Zrušit"
                    MinWidth="80"
                    Margin="0,0,8,0"
                    Background="#FF6C6C"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="12"
                    Padding="5"
                    BorderThickness="0"
                    Cursor="Hand"
                    HorizontalAlignment="Stretch"
                    BorderBrush="#FF6C6C"
                    Height="30"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>

            <Button Content="Registrovat"
                    IsDefault="True"
                    MinWidth="110"
                    Padding="10,4"
                    Margin="0,0,8,0"
                    Background="#4FC0CE"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="12"
                    BorderThickness="0"
                    Cursor="Hand"
                    HorizontalAlignment="Stretch"
                    BorderBrush="#4FC0CE"
                    Height="30"
                    Command="{Binding RegisterCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </StackPanel>
</Window>
