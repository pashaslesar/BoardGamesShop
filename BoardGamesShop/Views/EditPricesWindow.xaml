<Window x:Class="BoardGamesShop.Views.EditPricesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Upravit ceny her"
        Height="520"
        Width="760"
        WindowStartupLocation="CenterOwner"
        Background="#FFFBEF"
        Language="cs-CZ">

    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="0,0,0,8">
            <TextBlock Text="Hledat:" VerticalAlignment="Center" Margin="0,0,6,0"/>

            <TextBox x:Name="SearchTextBox"
                     Width="220"
                     Margin="0,0,12,0"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>

            <Button x:Name="SaveButton"
                    Content="💾 Uložit"
                    Padding="10,4"
                    Margin="0,0,8,0"
                    Background="#4FC0CE" Foreground="White"
                    FontWeight="Bold" FontSize="12"
                    BorderThickness="0" Cursor="Hand"
                    HorizontalAlignment="Stretch" BorderBrush="#4FC0CE" Height="30"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>

            <Button x:Name="CloseButton"
                    Content="Zavřít"
                    Padding="10,4"
                    Background="#FF6C6C" Foreground="White"
                    FontWeight="Bold" FontSize="12"
                    Margin="0,0,10,0"
                    BorderThickness="0" Cursor="Hand"
                    HorizontalAlignment="Stretch" BorderBrush="#FF6C6C" Height="30"
                    Command="{Binding CloseCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>

            <TextBlock x:Name="StatusText"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"
                       Foreground="#7a6b46"
                       Text="{Binding Status}"/>
        </StackPanel>

        <DataGrid x:Name="GamesGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="None"
                  RowHeaderWidth="0"
                  ItemsSource="{Binding RowsView}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Název"
                                    Binding="{Binding Name}"
                                    IsReadOnly="True"
                                    Width="*"/>
                <DataGridTextColumn Header="Autor"
                                    Binding="{Binding Author}"
                                    IsReadOnly="True"
                                    Width="2*"/>
                <DataGridTextColumn Header="Cena"
                                    Width="120">
                    <DataGridTextColumn.Binding>
                        <Binding Path="Price"
                                 Mode="TwoWay"
                                 UpdateSourceTrigger="PropertyChanged"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
