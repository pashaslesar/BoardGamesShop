<Window x:Class="BoardGamesShop.Views.AddGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Přidat novou hru"
        Height="640" Width="480"
        WindowStartupLocation="CenterOwner"
        Background="#FFFBEF">
    <ScrollViewer>
        <StackPanel Margin="20" VerticalAlignment="Top" >

            <TextBlock Text="Název hry:" FontWeight="Bold"/>
            <TextBox x:Name="NameBox" Margin="0,5,0,10"/>

            <TextBlock Text="Autor (jméno):" FontWeight="Bold"/>
            <TextBox x:Name="AuthorNameBox" Margin="0,5,0,10"/>

            <TextBlock Text="Země autora:" FontWeight="Bold"/>
            <TextBox x:Name="AuthorCountryBox" Margin="0,5,0,10"/>

            <TextBlock Text="Žánry (max 5):" FontWeight="Bold"/>
            <DockPanel Margin="0,5,0,5">
                <ComboBox x:Name="GenreComboBox" Width="260" Margin="0,0,8,0"/>
                <Button Content="➕ Přidat žánr"
                        Click="AddGenre_Click"
                        Background="#FF9A895F"
                        Foreground="White"
                        FontWeight="Bold"
                        Padding="6,4"
                        BorderBrush="#FF9A895F"/>
            </DockPanel>

            <ItemsControl x:Name="SelectedGenresPanel" Margin="0,0,0,10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#EAE0C8" Margin="2" Padding="5" CornerRadius="5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding}" Foreground="Black" Margin="0,0,5,0"/>
                                <Button Content="❌"
                                        FontSize="10"
                                        Padding="0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="RemoveGenre_Click"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>

            <TextBlock Text="Min hráčů:" FontWeight="Bold"/>
            <TextBox x:Name="MinPlayersBox" Margin="0,5,0,10"/>

            <TextBlock Text="Max hráčů:" FontWeight="Bold"/>
            <TextBox x:Name="MaxPlayersBox" Margin="0,5,0,10"/>

            <TextBlock Text="Doba hraní (min):" FontWeight="Bold"/>
            <TextBox x:Name="PlayTimeBox" Margin="0,5,0,10"/>

            <TextBlock Text="Cena (Kč):" FontWeight="Bold"/>
            <TextBox x:Name="PriceBox" Margin="0,5,0,10"/>

            <TextBlock Text="Věk:" FontWeight="Bold"/>
            <TextBox x:Name="AgeBox" Margin="0,5,0,10"/>

            <TextBlock Text="Cesta k obrázku (Assets/images/Dixit.png):" FontWeight="Bold"/>
            <DockPanel Margin="0,5,0,20">
                <TextBox x:Name="ImagePathBox" Margin="0,0,8,0" Width="330"/>
                <Button Content="Hledat..."
                        Width="85"
                        Background="#FF9A895F"
                        Foreground="White"
                        FontWeight="Bold"
                        Padding="6,4"
                        BorderBrush="#FF9A895F"
                        Click="BrowseImage_Click"/>
            </DockPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Zrušit"
                        Margin="0,0,8,0"
                        Click="Cancel_Click"
                        Background="#FF9A895F"
                        Foreground="White"
                        FontWeight="Bold"
                        Padding="10,6"
                        BorderBrush="#FF9A895F"/>
                <Button Content="✅ Přidat hru"
                        Click="AddGame_Click"
                        Background="#FF9A895F"
                        Foreground="White"
                        FontWeight="Bold"
                        Padding="10,6"
                        BorderBrush="#FF9A895F"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
